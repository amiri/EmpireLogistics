[% WRAPPER 'wrapper.tt'
    body_class = 'admin'
%]
[% c.add_stylesheet('/css/lib/dataTables.bootstrap.css') %]
[% c.add_jsfile('/js/lib/jquery.dataTables.min.js') %]
[% c.add_jsfile('/js/lib/dataTables.bootstrap.js') %]
[% c.add_jsfile('/js/lib/dataTables.num-html-sort.js') %]
[% c.add_jsfile('/js/lib/ckeditor/ckeditor.js') %]
<h1>Administration</h1>
<div class="row">
    <div class="col-md-2" id="admin-nav">
        <ul class="nav nav-stacked" id="sidebar">
          [% FOR page IN admin_pages %]
              <li><a href="[% page.url %]"><h4>[% page.name %]</h4></a></li>
          [% END %]
        </ul>
    </div>
    <div class="col-md-10">
    [% content %]
    </div>
</div>
[% END %]
<script type="text/javascript">
    CKEDITOR.replace("description");
</script>
